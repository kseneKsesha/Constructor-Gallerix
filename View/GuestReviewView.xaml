<!-- File: GuestReviewView.xaml -->
<Window x:Class="Constructor_Gallerix.View.GuestReviewView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Оставить отзыв"
        Height="550"
        Width="440"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True">
    <Window.Resources>
        <ResourceDictionary Source="/Resources/Styles.xaml"/>
    </Window.Resources>
    <Border CornerRadius="12">
        <Border.Background>
            <ImageBrush ImageSource="/Images/back-image.jpg" Stretch="Fill"/>
        </Border.Background>
        <Border CornerRadius="10" BorderThickness="3" Opacity="0.95">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#462AD8" Offset="0"/>
                    <GradientStop Color="#DA34AE" Offset="0.75"/>
                    <GradientStop Color="#8A16C1" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="#060531" Offset="0"/>
                    <GradientStop Color="#1B1448" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Верхняя панель -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="ОСТАВИТЬ ОТЗЫВ"
                               Margin="15,0,0,0"
                               VerticalAlignment="Center"
                               FontSize="14"
                               FontFamily="Montserrat"
                               Foreground="White"/>
                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                VerticalAlignment="Center"
                                Margin="0,0,10,0">
                        <Button x:Name="btnClose"
                                Content="X"
                                Style="{StaticResource CloseButtonStyle}"
                                Click="btnClose_Click"/>
                    </StackPanel>
                </Grid>

                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <StackPanel Margin="32,10,32,10">
                        <!-- Отзыв на галерею -->
                        <TextBlock Text="Оставьте отзыв на галерею:"
                                   FontSize="15"
                                   Foreground="White"
                                   Margin="0,0,0,9"/>
                        <TextBox x:Name="txtGalleryComment"
                                 Height="60"
                                 Style="{StaticResource InputFieldStyle}"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 Margin="0,0,0,8"/>

                        <TextBlock Text="Ваша оценка галереи:"
                                   FontSize="14"
                                   Foreground="White"
                                   Margin="0,4,0,5"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <Button x:Name="gstar1"
                                    Style="{StaticResource IconButton}"
                                    Click="GalleryStar_Click"
                                    Tag="1">
                                <TextBlock Text="★" FontSize="26" Foreground="#666"/>
                            </Button>
                            <Button x:Name="gstar2"
                                    Style="{StaticResource IconButton}"
                                    Click="GalleryStar_Click"
                                    Tag="2">
                                <TextBlock Text="★" FontSize="26" Foreground="#666"/>
                            </Button>
                            <Button x:Name="gstar3"
                                    Style="{StaticResource IconButton}"
                                    Click="GalleryStar_Click"
                                    Tag="3">
                                <TextBlock Text="★" FontSize="26" Foreground="#666"/>
                            </Button>
                            <Button x:Name="gstar4"
                                    Style="{StaticResource IconButton}"
                                    Click="GalleryStar_Click"
                                    Tag="4">
                                <TextBlock Text="★" FontSize="26" Foreground="#666"/>
                            </Button>
                            <Button x:Name="gstar5"
                                    Style="{StaticResource IconButton}"
                                    Click="GalleryStar_Click"
                                    Tag="5">
                                <TextBlock Text="★" FontSize="26" Foreground="#666"/>
                            </Button>
                        </StackPanel>

                        <TextBlock Text="Ваше имя (необязательно):"
                                   Foreground="White"
                                   Margin="0,0,0,4"/>
                        <TextBox x:Name="txtReviewerName"
                                 Style="{StaticResource InputFieldStyle}"
                                 Margin="0,0,0,15"/>

                        <Separator Margin="0,8"/>

                        <!-- Отзыв на приложение -->
                        <TextBlock Text="Хотите оставить отзыв о приложении?"
                                   FontSize="15"
                                   Foreground="White"
                                   Margin="0,8,0,9"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <Button x:Name="astar1"
                                    Style="{StaticResource IconButton}"
                                    Click="AppStar_Click"
                                    Tag="1">
                                <TextBlock Text="★" FontSize="26" Foreground="#666"/>
                            </Button>
                            <Button x:Name="astar2"
                                    Style="{StaticResource IconButton}"
                                    Click="AppStar_Click"
                                    Tag="2">
                                <TextBlock Text="★" FontSize="26" Foreground="#666"/>
                            </Button>
                            <Button x:Name="astar3"
                                    Style="{StaticResource IconButton}"
                                    Click="AppStar_Click"
                                    Tag="3">
                                <TextBlock Text="★" FontSize="26" Foreground="#666"/>
                            </Button>
                            <Button x:Name="astar4"
                                    Style="{StaticResource IconButton}"
                                    Click="AppStar_Click"
                                    Tag="4">
                                <TextBlock Text="★" FontSize="26" Foreground="#666"/>
                            </Button>
                            <Button x:Name="astar5"
                                    Style="{StaticResource IconButton}"
                                    Click="AppStar_Click"
                                    Tag="5">
                                <TextBlock Text="★" FontSize="26" Foreground="#666"/>
                            </Button>
                        </StackPanel>
                        <TextBox x:Name="txtAppComment"
                                 Height="60"
                                 Style="{StaticResource InputFieldStyle}"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 Margin="0,0,0,8"/>
                    </StackPanel>
                </ScrollViewer>

                <!-- Общая кнопка отправки -->
                <Button x:Name="btnSubmit"
                        Content="Отправить отзывы"
                        Style="{StaticResource MainButtonStyle}"
                        Height="40"
                        Margin="32,10,32,20"
                        Grid.Row="2"
                        Click="btnSubmit_Click"/>
            </Grid>
        </Border>
    </Border>
</Window>
