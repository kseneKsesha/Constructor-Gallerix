<!-- File: AppReviewView.xaml -->
<Window x:Class="Constructor_Gallerix.View.AppReviewView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Отзыв о приложении"
        Height="350"
        Width="420"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True">
    <Window.Resources>
        <ResourceDictionary Source="/Resources/Styles.xaml"/>
    </Window.Resources>
    <Border CornerRadius="12">
        <Border.Background>
            <ImageBrush ImageSource="/Images/back-image.jpg" Stretch="Fill"/>
        </Border.Background>
        <Border CornerRadius="10" BorderThickness="3" Opacity="0.95">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#462AD8" Offset="0"/>
                    <GradientStop Color="#DA34AE" Offset="0.75"/>
                    <GradientStop Color="#8A16C1" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="#060531" Offset="0"/>
                    <GradientStop Color="#1B1448" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid Margin="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <!-- Верхняя панель -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="ОТЗЫВ О ПРИЛОЖЕНИИ"
                               Margin="15,0,0,0"
                               VerticalAlignment="Center"
                               FontSize="14"
                               FontFamily="Montserrat"
                               Foreground="White"/>
                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                VerticalAlignment="Center"
                                Margin="0,0,10,0">
                        <Button x:Name="btnClose"
                                Content="X"
                                Style="{StaticResource CloseButtonStyle}"
                                Click="btnClose_Click"/>
                    </StackPanel>
                </Grid>
                <!-- Основное содержимое -->
                <StackPanel Grid.Row="1" Margin="32,15,32,15">
                    <TextBlock Text="Ваша оценка приложению:"
                               FontSize="15"
                               Foreground="White"
                               Margin="0,0,0,12"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,18">
                        <Button x:Name="star1"
                                Style="{StaticResource IconButton}"
                                Click="Star_Click"
                                Tag="1">
                            <TextBlock Text="★" FontSize="26" Foreground="#666"/>
                        </Button>
                        <Button x:Name="star2"
                                Style="{StaticResource IconButton}"
                                Click="Star_Click"
                                Tag="2">
                            <TextBlock Text="★" FontSize="26" Foreground="#666"/>
                        </Button>
                        <Button x:Name="star3"
                                Style="{StaticResource IconButton}"
                                Click="Star_Click"
                                Tag="3">
                            <TextBlock Text="★" FontSize="26" Foreground="#666"/>
                        </Button>
                        <Button x:Name="star4"
                                Style="{StaticResource IconButton}"
                                Click="Star_Click"
                                Tag="4">
                            <TextBlock Text="★" FontSize="26" Foreground="#666"/>
                        </Button>
                        <Button x:Name="star5"
                                Style="{StaticResource IconButton}"
                                Click="Star_Click"
                                Tag="5">
                            <TextBlock Text="★" FontSize="26" Foreground="#666"/>
                        </Button>
                    </StackPanel>
                    <TextBlock Text="Комментарий (необязательно):"
                               Foreground="White"
                               Margin="0,0,0,7"/>
                    <TextBox x:Name="txtComment"
                             Height="70"
                             Style="{StaticResource InputFieldStyle}"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"/>
                    <Button x:Name="btnSend"
                            Content="Отправить отзыв"
                            Style="{StaticResource MainButtonStyle}"
                            Height="36"
                            Margin="0,18,0,0"
                            Click="btnSend_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Border>
</Window>
