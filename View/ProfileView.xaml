<Window x:Class="Constructor_Gallerix.View.ProfileView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Профиль пользователя"
        Height="700"
        Width="1000"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True">
    <Window.Resources>
        <!-- Оборачиваем в единый ResourceDictionary, чтобы можно было добавить внешние и собственные ресурсы -->
        <ResourceDictionary>
            <!-- Ссылка на внешний файл стилей -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Стиль для текстовых полей в форме профиля -->
            <Style x:Key="ProfileTextBoxStyle"
                   TargetType="TextBox"
                   BasedOn="{StaticResource InputFieldStyle}">
                <Setter Property="Background" Value="#2A2A4D"/>
                <Style.Triggers>
                    <Trigger Property="IsReadOnly" Value="False">
                        <Setter Property="Background" Value="#3A3A6F"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Border CornerRadius="12">
        <Border.Background>
            <ImageBrush ImageSource="/Images/back-image.jpg" Stretch="Fill"/>
        </Border.Background>
        <Border CornerRadius="10" BorderThickness="3" Opacity="0.92">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#462AD8" Offset="0"/>
                    <GradientStop Color="#DA34AE" Offset="0.75"/>
                    <GradientStop Color="#8A16C1" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="#060531" Offset="0"/>
                    <GradientStop Color="#1B1448" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Верхняя панель управления окном -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="GALLERIX"
                               Margin="15,0,0,0"
                               VerticalAlignment="Center"
                               FontSize="15"
                               FontFamily="Montserrat"
                               Foreground="White"/>
                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                VerticalAlignment="Center"
                                Margin="0,0,15,0">
                        <Button x:Name="btnMinimize"
                                Content="-"
                                Style="{StaticResource MinimizeButtonStyle}"
                                Click="btnMinimize_Click"/>
                        <Button x:Name="btnClose"
                                Content="X"
                                Style="{StaticResource CloseButtonStyle}"
                                Margin="8,0,0,0"
                                Click="btnClose_Click"/>
                    </StackPanel>
                </Grid>

                <!-- Верхнее меню -->
                <Border Grid.Row="1"
                        Background="{StaticResource PrimaryColorBrush}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <!-- Ник пользователя -->
                        <TextBlock x:Name="txtMenuUsername"
                                   Text="Username"
                                   Margin="20,0,0,0"
                                   VerticalAlignment="Center"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   FontFamily="Montserrat"
                                   Foreground="White"/>
                        <!-- Меню навигации -->
                        <StackPanel Grid.Column="1"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                            <Button x:Name="btnHome"
                                    Content="Главная"
                                    Style="{StaticResource MenuButtonStyle}"
                                    Click="HomeButton_Click"
                                    Margin="10,0"/>
                            <Button x:Name="btnConstructor"
                                    Content="Конструктор"
                                    Style="{StaticResource MenuButtonStyle}"
                                    Click="ConstructorButton_Click"
                                    Margin="10,0"/>
                            <Button x:Name="btnMyWorks"
                                    Content="Мои работы"
                                    Style="{StaticResource MenuButtonStyle}"
                                    Click="MyWorksButton_Click"
                                    Margin="10,0"/>
                            <Button x:Name="btnDemo"
                                    Content="Демонстрация"
                                    Style="{StaticResource MenuButtonStyle}"
                                    Click="DemoButton_Click"
                                    Margin="10,0"/>
                            <Button x:Name="btnHelp"
                                    Content="Справка"
                                    Style="{StaticResource MenuButtonStyle}"
                                    Click="HelpButton_Click"
                                    Margin="10,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Контент профиля -->
                <Border Grid.Row="2"
                        Margin="0"
                        Background="#1B1448"
                        CornerRadius="0,0,10,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="32"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <!-- Левая часть: аватар + ник -->
                        <StackPanel Grid.Column="0"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Margin="0,-50,0,0">
                            <!-- Аватарка пользователя -->
                            <Button x:Name="btnUploadAvatar"
                                    Width="170"
                                    Height="168"
                                    HorizontalAlignment="Center"
                                    BorderThickness="0"
                                    Background="Transparent"
                                    Click="UploadAvatar_Click">
                                <Border Width="160"
                                        Height="160"
                                        CornerRadius="80"
                                        BorderBrush="#3D56B2"
                                        BorderThickness="3"
                                        Background="#2A2A4D"
                                        ClipToBounds="True">
                                    <Grid>
                                        <!-- Картинка вписывается по центру и обрезается по кругу -->
                                        <Image x:Name="imgAvatar"
                                               Width="160"
                                               Height="160"
                                               Stretch="UniformToFill"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center">
                                            <Image.Clip>
                                                <EllipseGeometry Center="80,80"
                                                                 RadiusX="80"
                                                                 RadiusY="80"/>
                                            </Image.Clip>
                                        </Image>
                                        <!-- Плюсик посередине; виден только если нет аватара -->
                                        <TextBlock x:Name="txtAvatarPlus"
                                                   Text="+"
                                                   FontSize="60"
                                                   FontWeight="Bold"
                                                   Foreground="White"
                                                   Opacity="0.7"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   Visibility="Collapsed"/>
                                    </Grid>
                                </Border>
                            </Button>
                            <TextBlock Text="Имя пользователя"
                                       FontWeight="Bold"
                                       FontSize="16"
                                       Foreground="#E0E0E0"
                                       Margin="0,25,0,5"
                                       HorizontalAlignment="Center"/>
                            <TextBox x:Name="txtUsername"
                                     Style="{StaticResource ProfileTextBoxStyle}"
                                     IsReadOnly="True"
                                     FontSize="14"
                                     Width="240"
                                     HorizontalAlignment="Center"
                                     Foreground="White"/>
                        </StackPanel>

                        <!-- Разделитель -->
                        <Border Grid.Column="1"
                                Width="1"
                                Background="#2A2A3A"
                                Margin="12,0"/>

                        <!-- Правая часть: остальные поля -->
                        <StackPanel Grid.Column="2"
                                    VerticalAlignment="Center"
                                    Margin="30,0,0,0">
                            <!-- Полное имя -->
                            <TextBlock Text="Полное имя"
                                       Margin="0,0,0,2"
                                       Foreground="#AAA"/>
                            <TextBox x:Name="txtFullName"
                                     Style="{StaticResource ProfileTextBoxStyle}"
                                     Width="260"
                                     IsReadOnly="True"
                                     GotFocus="Field_GotFocus"
                                     LostFocus="Field_LostFocus"/>

                            <!-- Почта -->
                            <TextBlock Text="Почта"
                                       Margin="0,14,0,2"
                                       Foreground="#AAA"/>
                            <TextBox x:Name="txtEmail"
                                     Style="{StaticResource ProfileTextBoxStyle}"
                                     Width="260"
                                     IsReadOnly="True"
                                     GotFocus="Field_GotFocus"
                                     LostFocus="Field_LostFocus"/>

                            <!-- Биография -->
                            <TextBlock Text="Биография"
                                       Margin="0,14,0,2"
                                       Foreground="#AAA"/>
                            <TextBox x:Name="txtBio"
                                     Style="{StaticResource ProfileTextBoxStyle}"
                                     Height="60"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     Width="260"
                                     IsReadOnly="True"
                                     GotFocus="Field_GotFocus"
                                     LostFocus="Field_LostFocus"/>

                            <!-- Дата создания -->
                            <TextBlock Text="Аккаунт создан"
                                       Margin="0,14,0,2"
                                       Foreground="#AAA"/>
                            <TextBox x:Name="txtCreatedAt"
                                     Style="{StaticResource ProfileTextBoxStyle}"
                                     Width="260"
                                     IsReadOnly="True"
                                     GotFocus="Field_GotFocus"
                                     LostFocus="Field_LostFocus"/>

                            <!-- Избранные галереи -->
                            <TextBlock Text="Избранные галереи:"
                                       Margin="0,18,0,2"
                                       Foreground="#AAA"/>
                            <ListBox x:Name="lstFavorites"
                                     Height="80"
                                     BorderBrush="Gray"
                                     BorderThickness="1"
                                     Background="#1E1E2F"
                                     Foreground="White"
                                     FontFamily="Montserrat"
                                     FontSize="13"
                                     Width="260"
                                     Margin="0,0,0,10"/>

                            <!-- Кнопки управления -->
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Right"
                                        Margin="0,20,160,0"
                                        Width="297">
                                <Button x:Name="btnEdit"
                                        Content="Редактировать"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Width="140"
                                        Click="Edit_Click"
                                        Height="40"/>
                                <Button x:Name="btnSave"
                                        Content="Сохранить"
                                        Style="{StaticResource PrimaryButtonStyle}"
                                        Width="140"
                                        Margin="10,0,0,0"
                                        IsEnabled="False"
                                        Click="Save_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Border>
</Window>
